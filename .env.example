# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/odds_data

# Redis
REDIS_URL=redis://localhost:6379/0

# Odds-API.io
ODDS_API_KEY=your_api_key_here
ODDS_API_BASE_URL=https://api.odds-api.io/v3

# Static files
STATIC_FILES_PATH=static

# Bookmakers (comma-separated, exact names from Odds-API.io /v3/bookmakers)
# Common Brazilian: Betano BR, Sportingbet BR, Bet365, Betfair Sportsbook
# Note: API plans may limit number of bookmakers
DEFAULT_BOOKMAKERS=Bet365

# Region-specific bookmakers (optional overrides)
# Uncomment and modify to override defaults
# REGION_BOOKMAKERS_BR=betano,pixbet,betnacional,kto,estrela_bet
# REGION_BOOKMAKERS_FR=betclic,winamax,unibet,pmu,zebet
# REGION_BOOKMAKERS_UK=bet365,william_hill,ladbrokes,paddy_power,betfair
# REGION_BOOKMAKERS_ES=bet365,betway,codere,sportium,888sport
# REGION_BOOKMAKERS_IT=bet365,sisal,snai,goldbet,lottomatica
# REGION_BOOKMAKERS_DE=bet365,tipico,bwin,betway,unibet
# REGION_BOOKMAKERS_MX=caliente,betway,bet365,codere,1xbet
# REGION_BOOKMAKERS_AR=bet365,betsson,betway,codere,bwin
# REGION_BOOKMAKERS_CO=betplay,wplay,bet365,betsson,1xbet

# Cache TTL (seconds)
CACHE_TTL_SPORTS=86400
CACHE_TTL_EVENTS=300
CACHE_TTL_ODDS=60

# CORS (comma-separated origins or "*" for all)
CORS_ORIGINS=*

# API Key authentication (optional)
API_KEY_ENABLED=false
API_KEY=your_secret_api_key_here

# Data retention
RETENTION_DAYS_ENDED=7
CLEAN_DATA_TOKEN=your_cleanup_token_here
